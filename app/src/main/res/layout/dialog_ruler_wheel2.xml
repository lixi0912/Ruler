<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="day"
                type="androidx.databinding.ObservableField&lt;Integer&gt;"
                />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@android:color/white"
            >


        <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#333"
                android:text="@string/wheel_demo"
                />


        <com.lixicode.ruler.RulerView
                android:id="@+id/date_ruler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                app:ruler_labelOptions="@style/AppTheme.RulerView.Options.WheelLabel"
                app:ruler_minimumOfTicks="0"
                app:ruler_tickOptions="@null"
                app:ruler_stepOfTicks="1"
                app:ruler_dividerTickOptions="@null"
                app:ruler_enableMirrorTick="true"
                app:tick="@={day}"
                app:ruler_baseLineOptions="@null"
                app:ruler_autoSize="none"
                app:ruler_autoSizeMaxTextSize="11sp"
                app:ruler_maximumOfTicks="1"
                />


        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/btn_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_ruler"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                app:cornerRadius="0dp"
                app:backgroundTint="@color/colorPrimary"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:text="@string/submit"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
