<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RulerView">
        <item name="ruler_tickOptions">@style/RulerView.Options.Tick</item>
        <item name="ruler_labelOptions">@style/RulerView.Options.Label</item>
        <item name="ruler_baseLineOptions">@style/RulerView.Options.BaseLine</item>
        <item name="ruler_dividerTickOptions">@style/RulerView.Options.Divider</item>
        <item name="ruler_cursorOptions">@style/RulerView.Options.Course</item>

        <item name="ruler_significantTickWeight">1.5</item>
        <item name="ruler_visibleCountOfTick">5</item>
        <item name="ruler_stepOfTicks">5</item>
        <item name="ruler_minimumOfTicks">100</item>
        <item name="ruler_maximumOfTicks">500</item>
        <item name="ruler_tick">100</item>
        <item name="ruler_enableMirrorTick">false</item>
        <item name="android:orientation">vertical</item>
        <item name="ruler_gravityOfTick">start</item>
    </style>

    <style name="RulerView.Options">
        <item name="ruler_weight">1</item>
        <item name="ruler_enable">true</item>
        <item name="ruler_inset">true</item>
        <item name="ruler_spacing">1dp</item>
        <item name="ruler_drawable">@null</item>
    </style>

    <style name="RulerView.Options.Tick" parent="RulerView.Options">
        <item name="ruler_weight">0.8</item>
        <item name="ruler_drawable">@drawable/simple_tick</item>
    </style>
    <style name="RulerView.Options.BaseLine" parent="RulerView.Options">
        <item name="ruler_drawable">@drawable/simple_baseline</item>
    </style>
    <style name="RulerView.Options.Divider" parent="RulerView.Options">
        <item name="ruler_weight">0.5</item>
        <item name="ruler_drawable">@drawable/simple_tick</item>
    </style>
    <style name="RulerView.Options.Course" parent="RulerView.Options">
        <item name="ruler_weight">0.8</item>
        <item name="ruler_drawable">@drawable/simple_course</item>
    </style>

    <style name="RulerView.Options.Label" parent="RulerView.Options">
        <item name="ruler_weight">2</item>
        <item name="ruler_spacing">3dp</item>

        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">18sp</item>

        <item name="ruler_textAlign">CENTER</item>
        <item name="ruler_longestLabel">@null</item>
        <item name="ruler_sameLengthOfLabel">true</item>
    </style>


</resources>
